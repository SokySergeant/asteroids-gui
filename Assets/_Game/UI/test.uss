:root {
    --accent-color: rgb(1, 10, 20);
}

.menu-button {
    height: 82px;
    display: flex;
    visibility: visible;
    overflow: hidden;
    opacity: 1;
    margin-bottom: 26px;
    color: rgb(255, 0, 0);
    font-size: 47px;
    -unity-font: url('project://database/Library/unity%20default%20resources?fileID=10102&guid=0000000000000000e000000000000000&type=0#Arial');
    -unity-text-align: middle-center;
    -unity-text-outline-width: 2px;
    -unity-text-outline-color: rgb(77, 16, 16);
    -unity-font-style: bold;
    text-shadow: 5px 5px 1px rgb(0, 0, 0);
    letter-spacing: 98px;
    background-color: var(--accent-color);
    -unity-background-image-tint-color: rgb(255, 255, 255);
    border-left-color: rgb(106, 83, 21);
    border-right-color: rgb(106, 103, 21);
    border-top-color: rgb(23, 106, 21);
    border-bottom-color: rgb(23, 106, 21);
    border-left-width: 10px;
    border-right-width: 10px;
    border-top-width: 10px;
    border-bottom-width: 10px;
    transform-origin: center;
    cursor: url('project://database/Packages/com.unity.collab-proxy/Editor/PlasticSCM/Assets/Images/d_iconaddedlocal@2x.png?fileID=2800000&guid=02800fb9cff14da47a04572790384d8b&type=3#d_iconaddedlocal@2x');
    background-image: none;
    transition-property: all;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    transition-delay: 0s;
    width: 382px;
    align-items: center;
    justify-content: center;
    flex-grow: 1;
    border-top-left-radius: 15px;
    border-bottom-left-radius: 15px;
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
    flex-direction: column;
}

.menu-button:hover {
    -unity-background-image-tint-color: rgb(255, 255, 255);
    scale: 1.1 1.1;
    background-color: rgb(199, 214, 29);
}

.menu-button:active {
    scale: 0.9 0.9;
    background-color: rgba(0, 0, 0, 0.5);
}
